{% extends 'back.html.twig' %}
{% block egg %}


    <a href="{{ path('back_AddContrat') }}"><li> affecter un contrat</li></a>
    <br><br>

    <h2>Liste Des Produits</h2>
    <br>
    <table class="table" style="width: 100%; ">

        <tr style="background: #343A40;color: white;border: none; ">
            <th style=" text-align: center;padding: 18px;border: none;">Id</th>
            <th style=" text-align: center;padding: 18px;border: none;">Salaire</th>
            <th style=" text-align: center;padding: 18px;border: none;">type de contrat</th>
            <th style=" text-align: center;padding: 18px;border: none;">Dureecontart</th>
            <th style=" text-align: center;padding: 18px;border: none;">modifier</th>
            <th style=" text-align: center;padding: 18px;border-top-right-radius: 15px;border: none;">Supprimer</th>
