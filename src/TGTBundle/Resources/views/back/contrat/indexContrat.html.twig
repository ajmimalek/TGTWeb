        {% for contrat in contrat %}
            <tr>
                <th style=" text-align: center;">{{ contrat.id }}</th>
                <th style=" text-align: center;">{{ contrat.salaire }}</th>
                <th style=" text-align: center;">{{ contrat.typeContrat }}</th>
                <th style=" text-align: center;">{{ contrat.dureeContart }}</th>
                <th style="width: 25px;"><a href="{{ path('back_EditContrat', { 'id': contrat.id }) }}"><center><img src="{{ asset('back/img/ed.jpg') }}" /></center></a></th>
                <th style="width: 25px;"><a href="{{ path('back_DeleteContrat',{ 'id': contrat.id }) }}"><center><img src="{{ asset('back/img/rm.jpg') }}" /></center></a></th>
            </tr>
        {% endfor %}
    </table>
{% endblock %}


