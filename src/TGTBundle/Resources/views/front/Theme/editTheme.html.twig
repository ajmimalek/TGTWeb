{% extends 'profile.html.twig' %}

{% block content %}
    <div class="align-self-center ">

        {{ form_start(edit_form, {'attr': {'class' : 'form-row'}} ) }}
        <div class="form-row">

            <div class="form-group col-md-6">
                {{ form_label(edit_form.nomTheme, 'modifier le nom du theme', {'attr': {'class' : 'form-group col-md-6'}} ) }}
                {{ form_widget(edit_form.nomTheme, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(edit_form.typeTheme, 'modifier le type du theme', {'attr': {'class' : 'form-group col-md-6'}} ) }}
                {{ form_widget(edit_form.typeTheme, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(edit_form.libelleTheme, ' modifier libelle', {'attr': {'class' : 'form-group col-md-6'}} ) }}
                {{ form_widget(edit_form.libelleTheme, {'attr': {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(edit_form.descriptionTheme, ' modifier  la description', {'attr': {'class' : 'form-group col-md-6'}} ) }}
                {{ form_widget(edit_form.descriptionTheme, {'attr': {'class' : 'form-control'}}) }}
            </div>

            <div class="form-group col-md-6">
                {{ form_widget(edit_form.Valider, {'attr': {'class' : 'btn btn-primary btn-round'}}) }}

            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}