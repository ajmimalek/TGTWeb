{% extends 'profile.html.twig' %}
{% block name %} Détails Evenement {% endblock %}
{% block title %} Détails Evenement {% endblock %}
{% block content %}


    <div class="about-us-area section-padding-100-0">
                <!-- About Content -->
                <div class="col-12 col-lg-6">
                    <div class="about--content mb-100">
                        <h4>{{ event.titreEvents }}</h4>
                        {{ event.descriptionEvents | raw }}
                        <!-- Key Notes -->
                        <ul class="key-notes">
                            <li><div class="check"><img src="{{ asset('front/img/core-img/check.png') }}"  alt=""></div>Theme:  {{ event.themeEvents }}</li>
                            <li><div class="check"><img src="{{ asset('front/img/core-img/check.png') }}" alt=""></div>Adresse: {{ event.adresseEvents }}</li>
                            <li><div class="check"><img src="{{ asset('front/img/core-img/check.png') }}"  alt=""></div>Prix: {{ event.prixEvents }}</li>
                            <li><div class="check"><img src="{{ asset('front/img/core-img/check.png') }}"  alt=""></div>Date: {{ event.dateEvents|date }}</li>

                        </ul>
                        <div style="align-content: center">{{ socialButtons() }}</div>
                    </div>
                </div>
        <!-- About Thumbnail -->
        <div class="col-12 col-lg-6">
            <div class="about-thumbnail mb-100">
                <img src="{{ asset('uploads/images/' ~ event.ImageEvents) }}" alt="">
            </div>
            <meta name="viewport" content="initial-scale=1.0">
            <meta charset="utf-8">
            <style>
                /* Always set the map height explicitly to define the size of the div
                 * element that contains the map. */
                #map {
                    height: 500px;
                    width: 540px;
                }
                /* Optional: Makes the sample page fill the window. */
                html, body {
                    height: 80%;
                    margin: 0%;
                    padding: 0%;
                }
            </style>

            <body>
            <div id="map"></div>
            <script>
                var map;
                function initMap() {
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: {lat: 33.8439408, lng: 9.400138},
                        zoom: 6,
                        title: 'Tunis'
                    });
                }
            </script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDRs-SJUpJonsTwQqNZaTcqlgeL2UYN6Ak&callback=initMap"
                    async defer></script>
            </body>
        </div>
    </div>



{% endblock %}